---
const { url, text } = Astro.props
---

<a
  href={url}
  target='_blank'
  rel='noopener noreferrer'
  class='px-4 py-2 flex gap-2 items-center bg-gradient-to-tr from-[#cc8861] to-[#b05372] rounded-full shadow-xl'
>
  <slot />
  <span class='shrink-0 uppercase text-sm font-bold'>{text}</span>
</a>
