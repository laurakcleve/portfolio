---
interface Props {
  title: string
}

const { title } = Astro.props

import { Image } from '@astrojs/image/components'
import logo from '../images/logo.svg'
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='bg-background text-text leading-7'>
    <main class='mt-8 w-11/12 max-w-3xl mx-auto px-4'>
      <!-- <main class='mt-32 xs:mt-40 sm:mt-52 w-11/12 max-w-3xl mx-auto px-4'> -->
      <a href='/'>
        <Image alt='' src={logo} width={32} height={32} class='mb-12' />
      </a>
      <slot />
    </main>
  </body>
</html>
